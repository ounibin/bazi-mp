page {
  padding: 1.5rem;
  box-sizing: border-box;
  background-color: #F5F3F0;
  color: #666;
  font-size: 16px;
  /* theme */
  --main-color: #A57865;


  /* vant reset */
  --sidebar-selected-border-color: #3cc51f;
  --button-primary-background-color: #A57865;
  --button-primary-border-color: #A57865;
  --tab-active-text-color: #A57865;
  --switch-on-background-color: #A57865;
}



/* weui reset */
button[type=primary] {
  background-color: var(--main-color);
  color: #fff;
}

button[type=primary]:active,
button[type=primary]:hover,
button[type=primary]:focus {
  background-color: var(--main-color);
  opacity: 0.8;
}

